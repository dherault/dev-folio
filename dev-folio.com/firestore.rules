rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // function isAdministrator() {
    //   return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdministrator;
    // }

    match /users/{userId} {
      allow read: if request.auth != null  && request.auth.uid == userId;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId && !request.resource.data.isAdministrator;
    }

  }
}
